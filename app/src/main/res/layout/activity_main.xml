<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ductran.myapplication.MainActivity">

    <TextView
        android:text="Enter Your Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:id="@+id/TextViewNameTit"
        android:layout_alignBottom="@+id/NameEditText"
        android:layout_alignLeft="@+id/NameEditText"
        android:layout_alignStart="@+id/NameEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="56dp"
        android:id="@+id/NameEditText"
        android:layout_below="@+id/TextViewQuestion"
        android:layout_alignRight="@+id/SingleButton"
        android:layout_alignEnd="@+id/SingleButton" />

    <Button
        android:text="Q2. Maths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ2"
        android:layout_below="@+id/ButtonQ1"
        android:layout_centerHorizontal="true"
        android:textSize="14sp" />

    <Button
        android:text="Q1. Programming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ1"
        android:layout_below="@+id/TextViewNameTit"
        android:layout_centerHorizontal="true"
        android:textSize="14sp" />

    <TextView
        android:text="Welcome to Quiz app!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewWelcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonRegister"
        android:layout_above="@+id/ButtonQ1"
        android:layout_alignRight="@+id/MultiplayerButton"
        android:layout_alignEnd="@+id/MultiplayerButton" />

    <Button
        android:text="CHEAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HintButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Skip Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SkipButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Go to questions list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StartButton"
        android:layout_above="@+id/SkipButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewScore"
        android:layout_above="@+id/textViewSolution"
        android:layout_centerHorizontal="true"
        android:text="Score" />

    <Button
        android:text="Q3. Sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ3"
        android:textSize="14sp"
        android:layout_below="@+id/ButtonQ2"
        android:layout_alignLeft="@+id/ButtonQ2"
        android:layout_alignStart="@+id/ButtonQ2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSolution"
        android:text="Solution"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/buttonB"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/QuestionTextView"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/NameEditText"
        android:layout_alignBottom="@+id/NameEditText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="LowerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewHigh"
        android:layout_marginTop="6dp"
        android:id="@+id/textViewLow"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/textViewHigh"
        android:layout_alignStart="@+id/textViewHigh"
        android:layout_alignRight="@+id/textViewHigh"
        android:layout_alignEnd="@+id/textViewHigh" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonC"
        android:layout_alignBaseline="@+id/buttonB"
        android:layout_alignBottom="@+id/buttonB"
        android:layout_toRightOf="@+id/StartButton"
        android:layout_toEndOf="@+id/StartButton" />

    <Button
        android:text="Next Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NextPlayerButton"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/buttonScore"
        android:layout_toRightOf="@+id/buttonScore"
        android:layout_toEndOf="@+id/buttonScore" />

    <Button
        android:text="Multi players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MultiplayerButton"
        android:layout_alignBaseline="@+id/SingleButton"
        android:layout_alignBottom="@+id/SingleButton"
        android:layout_toRightOf="@+id/QuestionTextView"
        android:layout_toEndOf="@+id/QuestionTextView" />

    <TextView
        android:text="Click button below to Start your Quiz!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/textViewNotice"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_above="@+id/StartButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Score RANKS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonScore"
        android:layout_above="@+id/textViewNotice"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Q5. Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ5"
        android:textSize="14sp"
        android:layout_below="@+id/ButtonQ4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Higher Score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHigh"
        android:textSize="20sp"
        android:layout_above="@+id/ButtonQ4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Q4. Geography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ4"
        android:textSize="14sp"
        android:layout_below="@+id/ButtonQ3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Single Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SingleButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/TextViewWelcome"
        android:layout_alignEnd="@+id/TextViewWelcome" />

    <Button
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonA"
        android:textSize="14sp"
        android:layout_below="@+id/ButtonQ5"
        android:layout_toLeftOf="@+id/StartButton"
        android:layout_toStartOf="@+id/StartButton" />

    <Button
        android:text="B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonB"
        android:layout_below="@+id/ButtonQ5"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="RE-DO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StartButton"
        android:layout_alignRight="@+id/ButtonQ3"
        android:layout_alignEnd="@+id/ButtonQ3"
        android:id="@+id/button_Redo" />

    <Button
        android:text="Score list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNotice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/SingleScore_button" />


</RelativeLayout>
